                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{covid>iso}" />
                                <Text text="{covid>name}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table> -->
            </VBox>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button id="idbtn" text="Submit" press="onSubmit" type="Accept" />
                    <Button id="idreset" text="Reset" press="onReset" type="Accept" />
                </contentRight>
                <!-- onsubmit function is present in controller.js part  -->
            </Bar>
        </footer>
    </Page>
</mvc:View>
